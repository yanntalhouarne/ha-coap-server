/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>
#include "hacoap-pinctrl.dtsi"

/ {
	model = "hacoap";
	compatible = "yann-t-hacoap";

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
		zephyr,ieee802154 = &ieee802154;
		zephyr,entropy = &rng;
	};
	zephyr,user {
		io-channels = <&adc 0>;
	};
	leds {
		compatible = "gpio-leds";
		led1: led_1 {
			gpios = <&gpio0 13 GPIO_ACTIVE_HIGH>;
			label = "USR BLUE LED";
		};
		radio_red_led: radio_red_led {
			gpios = <&gpio1 2 GPIO_ACTIVE_LOW>;
			label = "RADIO RED LED";
		};
		radio_blue_led: radio_blue_led {
			gpios = <&gpio1 4 GPIO_ACTIVE_LOW>;
			label = "RADIO BLUE LED";
		};
		radio_green_led: radio_green_led {
			gpios = <&gpio1 6 GPIO_ACTIVE_LOW>;
			label = "RADIO GREEN LED";
		};
		pump1: pump_1 {
			gpios = <&gpio0 17 GPIO_ACTIVE_HIGH>;
			label = "Water pump";
		};
		tofen: tof_en {
			gpios = <&gpio0 9 (GPIO_PULL_UP | GPIO_ACTIVE_HIGH)>;
			label = "TOF enable";
		};
	};
	buzzer {
		 compatible = "pwm-leds";
		 pwm_buzzer: pwm_buzzer {
			     pwms = <&pwm0 0 PWM_KHZ(6) PWM_POLARITY_NORMAL>;
		 };
	};
	buttons {
		compatible = "gpio-keys";
		button0: button_0 {
			gpios = <&gpio1 13 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "BTN 0";
		};
		button1: button_1 {
			gpios = <&gpio0 24 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "OT MODE";
		};
		button2: button_2 {
			gpios = <&gpio1 9 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "ALERT";
		};
		button3: button_3 {
			gpios = <&gpio1 10 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "CHRG";
		};
	};

	/* These aliases are provided for compatibility with samples */
	aliases {
		user-led = &led1;
		radio-red-led = &radio_red_led;
		radio-blue-led = &radio_blue_led;
		radio-green-led = &radio_green_led;
		pump1 = &pump1;
		tofen = &tofen;
		pwm-buzzer= &pwm_buzzer;
		usr-button = &button0;
		ot-mode = &button1;
		sw2 = &button2;
		bootloader-led0 = &radio_red_led;
		mcuboot-button0 = &button0;
		mcuboot-led0 = &radio_red_led;
		watchdog0 = &wdt0;
	};
};

&adc {
	#address-cells = <1>;
	#size-cells = <0>;
	status = "okay";
	channel@0 {
		reg = <0>;
		zephyr,gain = "ADC_GAIN_1_6";
		zephyr,reference = "ADC_REF_INTERNAL";
		zephyr,acquisition-time = <ADC_ACQ_TIME_DEFAULT>;
		zephyr,input-positive = <NRF_SAADC_AIN0>; /* P0.02 */
		zephyr,resolution = <12>;
	};
};

&gpiote {
	status = "okay";
};

&gpio0 {
	status = "okay";
};

&gpio1 {
	status = "okay";
};

&uart0 {
    compatible = "nordic,nrf-uarte";
    status = "okay";
    current-speed = <115200>;
    pinctrl-0 = <&uart0_default>;
    pinctrl-1 = <&uart0_sleep>;
    pinctrl-names = "default", "sleep";
};

&i2c0 {
	status = "okay";
	compatible = "nordic,nrf-twim";
	pinctrl-0 = <&i2c0_default>;
	pinctrl-1 = <&i2c0_sleep>;
	pinctrl-names = "default", "sleep";
	max17048: max17048@36 {
		compatible = "maxim,max17048";
		status = "ok";
		reg = <0x36>;
	};
	ti_hdc: ti_hdc@40 {
		compatible = "ti,hdc","ti,hdc1080";
		reg = <0x40>;
	};
	vl53l0x@30 {
		compatible = "st,vl53l0x";
		reg = <0x30>;
		label = "VL53L0X";
	};
	lsm6dsl@6a {
		compatible = "st,lsm6dsl";
		status = "okay";
		reg = <0x6a>;
		irq-gpios = <&gpio0 29 GPIO_ACTIVE_HIGH>;
	};
};

&pwm0 {
	status = "okay";
	pinctrl-0 = <&pwm0_default>;
	pinctrl-1 = <&pwm0_sleep>;
	pinctrl-names = "default", "sleep";
};

&ieee802154 {
	status = "okay";
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;
		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x00000000 0x0000C000>;
		};
		slot0_partition: partition@c000 {
			label = "image-0";
			reg = <0x0000C000 0x00076000>;
		};
		slot1_partition: partition@82000 {
			label = "image-1";
			reg = <0x00082000 0x00076000>;
		};
		/*
		 * The flash starting at 0x000f8000 and ending at
		 * 0x000fffff is reserved for use by the application.
		 */
		/*
		 * Storage partition will be used by FCB/LittleFS/NVS
		 * if enabled.
		 */
		storage_partition: partition@f8000 {
			label = "storage";
			reg = <0x000f8000 0x00008000>;
		};
	};
};

