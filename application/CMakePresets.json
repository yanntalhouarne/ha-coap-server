{
    "version": 2,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20
    },
    "configurePresets": [
        {
            "name": "build_ftd_usb_logging",
            "displayName": "Build for hacoap",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "NCS_TOOLCHAIN_VERSION": "NONE",
                "BOARD": "hacoap",
                "BOARD_ROOT": "/home/yann/openthread_coap_server/application;${sourceDir}/",
                "CONFIG_DEBUG_OPTIMIZATIONS": "y",
                "CONFIG_DEBUG_THREAD_INFO": "y",
                "CACHED_CONF_FILE": "${sourceDir}/prj.conf",
                "OVERLAY_CONFIG": "${sourceDir}/overlay-logging.conf;${sourceDir}/overlay-usb.conf",
                "DTC_OVERLAY_FILE": "${sourceDir}/boards/usb.overlay"
            }
        },
        {
            "name": "build_mtd_lp",
            "displayName": "Build for hacoap",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build_1",
            "cacheVariables": {
                "NCS_TOOLCHAIN_VERSION": "NONE",
                "BOARD": "hacoap",
                "BOARD_ROOT": "/home/yann/openthread_coap_server/application;${sourceDir}/",
                "OVERLAY_CONFIG": "${sourceDir}/overlay-mtd.conf",
                "CONFIG_DEBUG_THREAD_INFO": "y",
                "CACHED_CONF_FILE": "${sourceDir}/prj.conf"
            }
        }
    ]
}